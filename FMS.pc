prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

# Including the following, as they may be useful when building other components
# and as a way to better record how the library was built.
ccompiler=mpicc
fccompiler=mpif90
cppflagss.compiled=-DINTERNAL_FILE_NML -fopenmp
cflags.compiled=-I/opt/netcdf/4.9.0/GNU/12.2.0/include -fopenmp
fcflags.compiled=-g -fbacktrace  -ffree-form -ffree-line-length-none -fcray-pointer -fopenmp -I/opt/netcdf/4.9.0/GNU/12.2.0/include -I/opt/netcdf/4.9.0/GNU/12.2.0/include -fdefault-real-8
ldflags.compiled= -L/opt/netcdf/4.9.0/GNU/12.2.0/lib64 -lnetcdf -L/opt/mpich/4.0.3/GNU/12.2.0/lib

Name: FMS
Description: The Flexible Modeling System Infrastructure Library
URL: https://www.gfdl.noaa.gov/fms
Version: 2022.04.00-dev
Libs: -L$(libdir) -lFMS
Libs.private: -lnetcdff 
Cflags: -I${includedir}
Fflags: -I${includedir}
